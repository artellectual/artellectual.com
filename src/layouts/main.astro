---
import MainNav from '../components/MainNav'
import Footer from '../components/Footer.astro'
import CookieBanner from '../components/CookieBanner'

const { title } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/devicons/devicon@v2.15.1/devicon.min.css">
		<title>{title}</title>
		<script defer data-domain="artellectual.com" src="https://plausible.io/js/script.js"></script>
		<script type="text/javascript">window.$crisp=[];window.CRISP_WEBSITE_ID="87175a6c-12a7-4065-a7f6-cd16bfcf3e93";(function(){d=document;s=d.createElement("script");s.src="https://client.crisp.chat/l.js";s.async=1;d.getElementsByTagName("head")[0].appendChild(s);})();</script>
	
		<meta name="twitter:card" content="summary_large_image">
		<meta name="twitter:site" content="@artellectual">
		<meta name="twitter:creator" content="@zacksiri">
		<meta name="twitter:title" content="Modular Technical Product Consulting | Artellectual">
		<meta name="twitter:description" content="Exactly what you need when you need it. Choose from various service types that work best for your organization, pay for the time you use.">
		<meta name="twitter:image" content="https://artellectual.com/social-card.jpg">
	
		<meta property="og:url" content="https://artellectual.com/" />
		<meta property="og:type" content="website" />
		<meta property="og:title" content="Modular Technical Product Consulting | Artellectual" />
		<meta property="og:description" content="Exactly what you need when you need it. Choose from various service types that work best for your organization, pay for the time you use." />
		<meta property="og:image" content="https://artellectual.com/social-card.jpg" />
	</head>
	<body>
		<div class="isolate bg-white">
			<div class="px-6 pt-6 lg:px-8">
				<MainNav pathName={Astro.request.url} client:load />
			</div>
			<slot />
		</div>
		<CookieBanner client:only='react' />
		<Footer />
	</body>
</html>
